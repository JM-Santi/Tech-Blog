<section class="post">
  <article class="view">
    <div class="header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.User.username}} on {{format_date post.createdAt}}
      </div>
    </div>
    <div class="view-body">
      {{post.body}}
    </div>
  </article>

  {{#if post.Comments}}
    <section class="view">
      <div class="header">
        <h3>Comments</h3>
      </div>

      <div class="view-body">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="view">
    <div class="header">
      <h3>Add New Comment</h3>
    </div>

    <div class="view-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />
      <label class="form-label" for="comment-body">Comment</label>
      <textarea name="comment-body" class="form-input"></textarea>
      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</section>

<script src="/js/comment.js"></script>