<section class="posts">
  {{#each posts}}
  <article class="view">
    <div class="header flex-row justify-space-between">
      <h2>
        <a href="/post/{{id}}">{{title}}</a>
      </h2>
      <div>
        Posted by {{User.username}} on {{format_date createdAt}}
      </div>
    </div>
    <div class="view-body">
      {{body}}
    </div>
  </article>
  {{/each}}
</section>